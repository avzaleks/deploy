<ul>
  <% if ::Refinery::Deployments::Admin::DeploymentsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.deployments_admin_deployments_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_deployments_admin_deployment_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Deployments::Admin::DeploymentsController.sortable? && ::Refinery::Deployments::Deployment.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.deployments_admin_deployments_path,
                     t('.reorder', what:  "Deployments"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.deployments_admin_deployments_path,
                      t('.reorder_done', what: "Deployments"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
