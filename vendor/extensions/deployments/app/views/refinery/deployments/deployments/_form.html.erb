    <!--<%#= f.text_field :capistrano_or_mina -%>-->
  <!--</div>-->
-------------------------------------------------------------------

   <div class="chouse_server">
    <span class='label_with_help'>
      <%= f.label :unicorn_or_puma, 'Chouse server' %>
    </span>
      <div class="maxl">
        <label class="radio inline">
          <%= f.radio_button :unicorn_or_puma, 'unicorn' %>
          <span> Unicorn </span>
        </label>
        <label class="radio inline">
          <%= f.radio_button :unicorn_or_puma,'puma' %>
          <span> Puma </span>
        </label>
      </div>
    </div>

-------------------------------------------------------------------

    <div class="chouse_deploy">
    <span class='label_with_help'>
      <%= f.label :capistrano_or_mina, 'Chouse deploy system' %>
    </span>
      <div class="maxl">
        <label class="radio inline">
          <%= f.radio_button :capistrano_or_mina, 'capistrano' %>
          <span> Capistrano </span>
        </label>
        <label class="radio inline">
          <%= f.radio_button :capistrano_or_mina,'mina' %>
          <span> Mina </span>
        </label>
      </div>
    </div>
------------------------------------------------------------------
   <div>
    <%= f.submit 'Create deploy setups', class: 'btn btn-large btn-primary' %>
</div>

<% end -%>
</div>
 </div>
</div>