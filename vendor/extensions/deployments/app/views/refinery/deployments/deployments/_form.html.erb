<style>
section {
  overflow-x: hidden;
  overflow-y: hidden;
}
</style>


<div class="container" >
<div class="row">
  <div class="span6 offset3">

<%= form_for [refinery, :deployments, @deployment] do |f| %>
  <%= render '/refinery/admin/error_messages',
              :object => @deployment,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class='field'>
    <%= f.label :repo_url %>
    <%= f.text_field :repo_url%>
  </div>

  <div class='field'>
    <%= f.label :name_of_host_for_deploy -%>
    <%= f.text_field :name_of_host -%>
  </div>

  <div class='field'>
    <%= f.label :ssh_port -%>
    <%= f.text_field :ssh_port -%>
  </div>

  <div class='field'>

     <%= f.label "Gemset (optional)" -%>
     <%= f.text_field :gemset -%>
  </div>

  <div class='field'>
    <%= f.label :name_of_user -%>
    <%= f.text_field :name_of_user -%>
  </div>

  <div class='field'>
    <%= f.label :user_password -%>
    <%= f.text_field :user_password -%>
  </div>

  <div class='field'>
    <%= f.label :name_of_application -%>
    <%= f.text_field :name_of_application -%>
  </div>

  <div class='field'>
    <%= f.label :path_for_deploy -%>
    <%= f.text_field :path_for_deploy -%>
  </div>

  <!--<div class='field'>-->
    <!--<%#= f.label :unicorn_or_puma -%>-->
    <!--<%#= f.text_field :unicorn_or_puma -%>-->
  <!--</div>-->

  <!--<div class='field'>-->
